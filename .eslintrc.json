{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "object-curly-newline": [
            "error",
            {
                "ObjectExpression": {
                    "multiline": true,
                    "consistent": true
                },
                "ObjectPattern": {
                    "multiline": true
                },
                "ImportDeclaration": {
                    "multiline": true,
                    "consistent": true
                },
                "ExportDeclaration": {
                    "multiline": true
                }
            }
        ],
        "object-property-newline": [
            "error",
            {
                "allowAllPropertiesOnSameLine": false
            }
        ]
    }
}
